{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#5A6374",
                    "properties": {
                        "time_format": "15:04:05"
                    },
                    "style": "plain",
                    "template": "[{{ .CurrentDate | date .Format }}] ",
                    "type": "time"
                },
                {
                    "foreground": "#C678DD",
                    "style": "plain",
                    "template": "{{ .UserName }} ",
                    "type": "session"
                },
                {
                    "foreground": "#61AFEF",
                    "properties": {
                        "style": "full"
                    },
                    "style": "plain",
                    "template": "<#DCDFE4>in</> {{ .Path }} ",
                    "type": "path"
                },
                {
                    "properties": {
                        "branch_icon": "",
                        "fetch_status": true,
                        "fetch_stash_count": true
                    },
                    "foreground": "#56B6C2",
                    "foreground_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#E5C07B{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#E5C07B{{ end }}",
                        "{{ if gt .Ahead 0 }}#98C379{{ end }}",
                        "{{ if gt .Behind 0 }}#E06C75{{ end }}"
                    ],
                    "style": "plain",
                    "template": "<#DCDFE4>on</> {{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0}} *{{ .StashCount }}{{ end }} ",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#5A6374",
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "plain",
                    "template": "> ",
                    "type": "exit"
                }
            ],
            "type": "prompt"
        }
    ],
    "version": 2
}
